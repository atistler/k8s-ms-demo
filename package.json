{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "latest",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "lerna": "^3.16.4",
    "mocha": "^6.2.0"
  },
  "dependencies": {
    "@pulumi/awsx": "^0.18.10",
    "@pulumi/eks": "^0.18.13",
    "@pulumi/kubernetes": "^1.0.0",
    "@pulumi/pulumi": "^1.0.0",
    "@types/fast-json-patch": "^1.1.5",
    "@types/lodash": "^4.14.138",
    "axios": "^0.19.0",
